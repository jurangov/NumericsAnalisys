<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.analisis.numericsapp.app.IntegrationMethod">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Trapeze"
        android:id="@+id/buttonTrapeze"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpson 1/3"
        android:id="@+id/buttonSimpson13"
        android:layout_below="@+id/buttonTrapeze"
        android:layout_alignRight="@+id/buttonTrapeze"
        android:layout_alignEnd="@+id/buttonTrapeze"
        android:layout_alignLeft="@+id/buttonTrapeze"
        android:layout_alignStart="@+id/buttonTrapeze" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpson 3/8"
        android:id="@+id/button38"
        android:layout_below="@+id/buttonSimpson13"
        android:layout_alignRight="@+id/buttonSimpson13"
        android:layout_alignEnd="@+id/buttonSimpson13"
        android:layout_alignLeft="@+id/buttonSimpson13"
        android:layout_alignStart="@+id/buttonSimpson13" />
</RelativeLayout>
